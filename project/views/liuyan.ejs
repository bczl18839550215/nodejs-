<!DOCTYPE html>
<html>
  <head>
    <title></title>
    <link rel='stylesheet' href='/stylesheets/style.css' />
    <link rel="stylesheet" href="https://cdn.bootcss.com/bootstrap/3.3.7/css/bootstrap.min.css" integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u" crossorigin="anonymous">
  </head>
  <body>
    <h1>留言</h1>
    <form action="/users/liuyan" method="post" >
    		<div>
			<h3>标题</h3>
			<input type="text" class="form-control" name="title" placeholder="请输入标题"/>
		</div>
		<div>
			<h3>内容</h3>
			<textarea type="text" class="form-control" name="con" placeholder="请输入内容" rows="10"></textarea>
		</div>
   	<input type="submit" value="发布留言" class="btn btn-danger"/>
		 </form>
    <table class="table">
   		<tr>
   			<th>序号</th>
   			<th>ID</th>
   			<th>标题</th>
   			<th>内容</th>
   		</tr>
   		<% result.map(function(item,i){ %>
   		<tr>
   			<th><%- i %></th>
   			<th><%- item.user %></th>
   			<th><%- item.title %></th>
   			<th><%- item.con %></th>
   		</tr>
    	<% })%>
    
  </body>
</html>
